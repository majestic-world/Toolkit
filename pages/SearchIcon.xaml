<UserControl x:Class="L2Toolkit.pages.SearchIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             mc:Ignorable="d">

    <ScrollViewer 
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0 0 0 10">
                <TextBlock
                    FontWeight="SemiBold"
                    FontSize="16"
                    Text="Pesquisar de Ícone" />
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Stretch">
                <TextBlock FontWeight="SemiBold" Text="Insira o Id do item" />
                <Border Background="White"
                        CornerRadius="10"
                        Margin="0 6"
                        SnapsToDevicePixels="True"
                        BorderBrush="#350B0B17"
                        BorderThickness="1">
                    <TextBox x:Name="ItemId"
                             AcceptsReturn="True"
                             IsReadOnly="False"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Disabled"
                             Height="40"
                             Padding="15,10"
                             BorderThickness="0"
                             Background="Transparent" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0 4 0 0" Orientation="Vertical" HorizontalAlignment="Stretch">
                <TextBlock FontWeight="SemiBold" Text="Selecione o tipo do item" />
                <ComboBox Margin="0 6 0 0" x:Name="ItemType" SelectedIndex="0" Style="{StaticResource ModernComboBoxStyle}">
                    <ComboBoxItem Content="Weapon" />
                    <ComboBoxItem Content="Armor" />
                    <ComboBoxItem Content="Items" />
                    <ComboBoxItem Content="Skills" />
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <Button
                    Style="{StaticResource PrimaryButton}"
                    Margin="0 10"
                    Width="120"
                    Height="40"
                    Click="SearchButton_OnClick"
                    x:Name="SearchButton"
                    Content="Pesquisar" />
            </StackPanel>

            <StackPanel Grid.Row="4">
                <TextBlock
                    x:Name="StatusBox"
                    Margin="0 10"
                    FontWeight="SemiBold"
                    FontSize="16"
                    Text="Resultado da pesquisa" />
            </StackPanel>

            <StackPanel Grid.Row="5">
                <TextBlock FontWeight="SemiBold" Text="Nome" Margin="0 4" />
                <Border Background="White"
                        CornerRadius="10"
                        Margin="0 6"
                        SnapsToDevicePixels="True"
                        BorderBrush="#350B0B17"
                        BorderThickness="1">
                    <TextBox x:Name="NameOutput"
                             PreviewMouseDown="IconOutput_OnPreviewMouseDown"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Disabled"
                             Height="40"
                             Padding="15,10"
                             BorderThickness="0"
                             Background="Transparent" />
                </Border>
                <TextBlock FontWeight="SemiBold" Text="Icon" Margin="0 4" />
                <Border Background="White"
                        CornerRadius="10"
                        Margin="0 6"
                        BorderBrush="#350B0B17"
                        SnapsToDevicePixels="True"
                        BorderThickness="1">
                    <TextBox x:Name="IconOutput"
                             PreviewMouseDown="IconOutput_OnPreviewMouseDown"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Disabled"
                             Height="40"
                             Padding="15,10"
                             BorderThickness="0"
                             Background="Transparent" />
                </Border>
                <TextBlock FontWeight="SemiBold" Text="Icon Panel" Margin="0 4" />
                <Border Background="White"
                        CornerRadius="10"
                        Margin="0 6"
                        BorderBrush="#350B0B17"
                        SnapsToDevicePixels="True"
                        BorderThickness="1">
                    <TextBox x:Name="IconPanelOutput"
                             AcceptsReturn="True"
                             PreviewMouseDown="IconPanelOutput_OnPreviewMouseDown"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Disabled"
                             Height="40"
                             Padding="15,10"
                             BorderThickness="0"
                             Background="Transparent" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="6">
                <TextBlock
                    Visibility="Collapsed"
                    x:Name="CopyBlock"
                    Height="auto"
                    Margin="0 3"
                    Foreground="Green"
                    FontWeight="SemiBold"
                    Text="✓ Copiado com sucesso!" />
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>