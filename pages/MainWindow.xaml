<Window x:Class="L2Toolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L2Toolkit"
        mc:Ignorable="d"
        Icon="/images/favicon.ico"
        Title="Lineage Toolkit By: MK Dev - v1.3" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3C3F41"/>
            <Setter Property="BorderBrush" Value="#5A5D5F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="5,0,5,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505355"/>
                    <Setter Property="BorderBrush" Value="#7A7D7F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#2D2D30" Grid.Column="0" VerticalAlignment="Stretch">
            <Button Content="Door Forge" Click="BtnDoor_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Pawn Data" Click="BtnPawnData_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Spawn Manager" Click="BtnSpawnManager_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Prime Shop" Click="BtnPrimeShop_Click" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Item Description" Click="BtnDescriptionFix_Click" Style="{StaticResource SidebarButtonStyle}"/>
        </StackPanel>

        <ContentControl x:Name="MainContent" Grid.Column="1" />
    </Grid>
</Window> 