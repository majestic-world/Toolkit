<UserControl x:Class="L2Toolkit.pages.DescriptionFix"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="Auto" Width="Auto"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0" 
                       Text="Description Fix" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <!-- Área de notificação -->
            <Border x:Name="NotificacaoBorder" 
                   Grid.Row="0"
                   Background="#FFEBE6" 
                   BorderBrush="#FF0000" 
                   BorderThickness="1" 
                   CornerRadius="5"
                   Margin="0,35,0,15"
                   Padding="10,8"
                   MinWidth="300"
                   MaxWidth="600"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Visibility="Collapsed">
                <TextBlock x:Name="StatusNotificacao"
                           Foreground="#C00000"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="13"/>
            </Border>

            <!-- Área de notificação de sucesso -->
            <Border x:Name="SucessoBorder" 
                   Grid.Row="0"
                   Background="#E6FFEB" 
                   BorderBrush="#00C853" 
                   BorderThickness="1" 
                   CornerRadius="5"
                   Margin="0,35,0,15"
                   Padding="10,8"
                   MinWidth="300"
                   MaxWidth="600"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Visibility="Collapsed">
                <TextBlock x:Name="SucessoNotificacao"
                           Foreground="#2E7D32"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="13"/>
            </Border>

            <!-- Área do seletor de arquivo -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Selecione o arquivo para modificar:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            Background="White" 
                            CornerRadius="8" 
                            SnapsToDevicePixels="True"
                            BorderBrush="#350B0B17" 
                            BorderThickness="1">
                        <TextBox x:Name="ArquivoSelecionadoTextBox" 
                                 Padding="10,8" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="#333333"
                                 FontSize="13"
                                 Height="40"
                                 IsReadOnly="True"
                                 VerticalContentAlignment="Center"/>
                    </Border>
                    <Button x:Name="SelecionarArquivoButton" 
                            Grid.Column="1"
                            Content="Selecionar Arquivo" 
                            Height="40"
                            Margin="10,0,0,0"
                            Padding="10,0"
                            Style="{StaticResource PrimaryButton}"
                            FontSize="12" 
                            Width="140"
                            FontWeight="Bold">
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Botão Processar -->
            <Button x:Name="ProcessarButton" 
                    Grid.Row="3"
                    Content="PROCESSAR ARQUIVO" 
                    Height="45"
                    Width="180"
                    Margin="0,0,0,15"
                    FontSize="14"
                    Style="{StaticResource PrimaryButton}"
                    FontWeight="Bold"
                    HorizontalAlignment="Center">
            </Button>

            <!-- Informação sobre o arquivo h5_names.txt -->
            <Border Grid.Row="4" 
                    Background="#EEF5FF" 
                    BorderBrush="#B3E5FC" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Height="110"
                    Padding="15,10"
                    Margin="0,10,0,0">
                <TextBlock TextWrapping="Wrap" 
                           FontSize="13">
                    <Run FontWeight="Bold">Informações:</Run>
                    <LineBreak/>
                    - O arquivo h5_names.txt deve estar na pasta do aplicativo.
                    <LineBreak/>
                    - As descrições são extraídas deste arquivo e aplicadas no arquivo selecionado.
                    <LineBreak/>
                    - Apenas o campo "description" será modificado, preservando todo o restante.
                    <LineBreak/>
                    - Após o processamento, o arquivo modificado será salvo em um novo local.
                </TextBlock>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl> 