<UserControl x:Class="L2Toolkit.pages.PrimeShopGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="Auto" Width="Auto"
             Background="#F5F5F5">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Produtos Prime Shop" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <Border x:Name="NotificacaoBorder" 
                   Grid.Row="0"
                   Background="#FFEBE6" 
                   BorderBrush="#FF0000" 
                   BorderThickness="1" 
                   CornerRadius="5"
                   Margin="0,35,0,15"
                   Padding="10,8"
                   MinWidth="300"
                   MaxWidth="600"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Visibility="Collapsed">
                <TextBlock x:Name="StatusNotificacao"
                           Foreground="#C00000"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="13"/>
            </Border>

            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Insira os ID's" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,15"/>
                    <Border Grid.Row="0" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <TextBox x:Name="IdsTextBox" 
                                 Padding="10,8" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="#333333"
                                 FontSize="13"
                                 Height="32"
                                 VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Categoria:" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,15"/>
                    <Border Grid.Row="1" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <ComboBox x:Name="CategoryComboBox" 
                                  Padding="8,6" 
                                  BorderThickness="1"
                                  Background="Transparent"
                                  Foreground="#333333"
                                  FontWeight="Normal"
                                  FontSize="13"
                                  Height="32"
                                  VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Tipo:" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,15"/>
                    <Border Grid.Row="2" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <ComboBox x:Name="TypeComboBox" 
                                  Padding="8,6" 
                                  BorderThickness="1"
                                  Background="Transparent"
                                  Foreground="#333333"
                                  FontWeight="Normal"
                                  FontSize="13"
                                  Height="32"
                                  VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="PreÃ§o:" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,15"/>
                    <Border Grid.Row="3" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <TextBox x:Name="PriceTextBox" 
                                 Padding="10,8" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="#333333"
                                 FontSize="13"
                                 Height="32"
                                 VerticalContentAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Quantidade:" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <Border Grid.Row="4" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <TextBox x:Name="QuantidadeTextBox" 
                                 Padding="10,8" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="#333333"
                                 FontSize="13"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 Text="1"/>
                    </Border>
                </Grid>

                <Button x:Name="GerarButton" 
                        Grid.Column="1"
                        Content="GERAR" 
                        Height="45"
                        Width="90"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20,0,0,0"
                        Style="{StaticResource PrimaryButton}"
                        FontSize="14" 
                        FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" />
                    </Button.Effect>
                </Button>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ProductName_Classic-eu.dat" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Grid.Column="0"/>
                        <Button x:Name="CopiarClienteButton" 
                                Content="ð Copiar" 
                                Width="70" 
                                Height="24"
                                Style="{StaticResource SecondaryButton}"
                                FontSize="12" 
                                Grid.Column="1">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="ClientTextBox" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Height="220"
                                 FontFamily="Consolas"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnly="True"/>
                    </Border>
                    <TextBlock x:Name="ClienteCopiadoTextBlock" 
                               Text="â Copiado com sucesso!" 
                               Foreground="#2E7D32" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5" 
                               Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="prime_shop.xml" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Grid.Column="0"/>
                        <Button x:Name="CopiarServidorButton" 
                                Content="ð Copiar" 
                                Width="70" 
                                Height="24"
                                Style="{StaticResource SecondaryButton}"
                                FontSize="12" 
                                Grid.Column="1">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="ServerTextBox" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Height="220"
                                 FontFamily="Consolas"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnly="True"/>
                    </Border>
                    <TextBlock x:Name="ServidorCopiadoTextBlock" 
                               Text="â Copiado com sucesso!" 
                               Foreground="#2E7D32" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5" 
                               Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Logs" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Grid.Column="0"/>
                        <Button x:Name="CopiarItensButton" 
                                Content="ð Copiar" 
                                Width="70" 
                                Height="24"
                                Style="{StaticResource SecondaryButton}"
                                FontSize="12" 
                                Grid.Column="1">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="ItemsGeneratedTextBox" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Height="150"
                                 FontFamily="Consolas"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnly="True"/>
                    </Border>
                    <TextBlock x:Name="ItensCopiadoTextBlock" 
                               Text="â Copiado com sucesso!" 
                               Foreground="#2E7D32" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5" 
                               Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl> 