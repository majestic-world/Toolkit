<UserControl x:Class="L2Toolkit.pages.LogParse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="Auto" Width="Auto"
             Background="#F5F5F5">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Separar logs por nome"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20" />

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Selecione o arquivo de log"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />
                    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="LogFile"
                                 AcceptsReturn="True"
                                 IsReadOnly="True"
                                 PreviewMouseDown="LogFile_OnPreviewMouseDown"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Disabled"
                                 Height="40"
                                 Cursor="Hand"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent" />
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Selecione a pasta de sáida"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />
                    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="OutputDir"
                                 AcceptsReturn="True"
                                 IsReadOnly="True"
                                 PreviewMouseDown="OutputDir_OnPreviewMouseDown"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Disabled"
                                 Height="40"
                                 Cursor="Hand"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent" />
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0 0 0 10">
                    <TextBlock Text="Insira a Key"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />
                    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="PlayerName"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="40"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnly="False" />
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0 0 0 10">
                    <TextBlock Text="Evento (Opcional)"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />
                    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox x:Name="SearchEvent"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="40"
                                 Padding="15,10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnly="False" />
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button Content="Gerar Dados"
                            Width="110"
                            x:Name="ButtonGenerate"
                            Click="RewardGenerate_OnClick"
                            Height="40"
                            FontSize="14"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0">
                    </Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>